<div class="col-md-6 offset-md-3">
    <div class="card">

        <div class="card-header">
            <h1>Task</h1>
        </div>

        <div class="card-body">
            {{#if contacts}}
            <h1>Contacts</h1>
            <ul class="list-group">
                {{#each contacts}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{firstname}}
                        {{lastname}} /
                        {{email}} /
                        {{phone}}
                        <a href="/delete-contact/{{@key}}" class="btn btn-danger">Delete</a>
                    </li>
                {{/each}}
            </ul>
            {{else}}
            <p>No contacts yet</p>
            {{/if}}
        </div>

        <div class="card-footer">
            <form action="/new-contact" method="POST">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="First Name" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="lastname" placeholder="Last Name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="emial" name="email" placeholder="Email" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" name="phone" placeholder="Phone" class="form-control">
                </div>
                <button class="btn btn-primary btn-block">
                    Add
                </button>
            </form>
        </div>
    </div>
</div>